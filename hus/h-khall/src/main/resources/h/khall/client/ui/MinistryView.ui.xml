<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:h="urn:import:h.style.g.client.ui" xmlns:k="urn:import:h.khall.client.ui" xmlns:b.card="urn:import:org.gwtbootstrap3.extras.card.client.ui"
	xmlns:b.slide="urn:import:org.gwtbootstrap3.extras.slider.client.ui" xmlns:b.toggle="urn:import:org.gwtbootstrap3.extras.toggleswitch.client.ui" xmlns:b.tag="urn:import:org.gwtbootstrap3.extras.tagsinput.client.ui.base">
	<ui:with field="msg" type="h.khall.client.resource.Messages" />
	<ui:with field="res" type="h.khall.client.resource.Resource" />
	<ui:style>
	
	</ui:style>
	<b.gwt:HTMLPanel addStyleNames="wrapper wrapper-content animated fadeInRight">
		<k:StatsView ui:field="mStats" dataType="OCLM" />
		<div class="row">
			<div class="col-sm-9">
				<div class="ibox">
					<b.gwt:HTMLPanel addStyleNames="ibox-content marginB25">
						<b:Heading size="H2" text="Monthly Report" alignment="CENTER" />
						<div class="row">
							<div class="col-md-6 b-r">
								<div class="form-group">
									<label>Publisher</label>
									<b.tag:MultiValueTagsInput ui:field="mName" allowDuplicaties="false" trimValue="true" width="100%" />
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label>Report Month</label>
									<h:InputView ui:field="mMonth" placeholder="Month" class="form-control" tabindex="99" />
								</div>
							</div>
						</div>
						<hr />
						<div class="row">
							<div class="col-md-6 b-r">
								<div class="form-group">
									<label>Placements (Printed and Electronic)</label>
									<h:NumberView ui:field="mPlacement" placeholder="Placements" class="form-control" tabindex="1" />
								</div>
								<div class="form-group">
									<label>Video Showings</label>
									<h:NumberView ui:field="mVideo" placeholder="Video Showings" class="form-control" tabindex="2" />
								</div>
								<div class="form-group">
									<label>Hours</label>
									<h:NumberView ui:field="mHour" placeholder="Hours" class="form-control" tabindex="3" />
								</div>
								<div class="form-group">
									<label>Return Visits</label>
									<h:NumberView ui:field="mRv" placeholder="Return Visits" class="form-control" tabindex="4" />
								</div>
								<div class="form-group">
									<label>Bible Studies</label>
									<h:NumberView ui:field="mStudy" placeholder="Bible Studies" class="form-control" tabindex="5" />
								</div>
								<div class="form-group">
									<label>Comments</label>
									<h:InputView ui:field="mComment" placeholder="Comments" class="form-control" tabindex="6" />
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label>No Activity</label>
									<h:InputView ui:field="mNoActivity" placeholder="No Activity" class="form-control" tabindex="7" />
								</div>
								<div class="form-group">
									<label>Send Date</label>
									<h:InputView ui:field="mSend" placeholder="Send Date" class="form-control" tabindex="8" />
								</div>
								<div class="form-group">
									<label>Partial Hours</label>
									<h:InputView ui:field="mPartial" placeholder="Partial Hours" class="form-control" tabindex="9" />
								</div>
								<div class="form-group">
									<label>Other Hours</label>
									<h:NumberView ui:field="mCredit" placeholder="Other Hours" class="form-control" tabindex="10" />
								</div>
								<div class="form-group">
									<label>Include ALL 'Other Hours' in goal</label>
									<h:InputView ui:field="mInclude" placeholder="Include Other Hours" class="form-control" tabindex="11" />
								</div>
								<div class="form-group">
									<label>Pioneer</label>
									<h:InputView ui:field="mPioneer" placeholder="Pioneer" class="form-control" tabindex="12" />
								</div>
							</div>
						</div>
						<hr />
						<b:Button ui:field="mSave" text="Save" type="PRIMARY" size="SMALL" />
					</b.gwt:HTMLPanel>
				</div>
			</div>
			<div class="col-sm-3">
				<k:PartInfoView />
			</div>
		</div>
	</b.gwt:HTMLPanel>
</ui:UiBinder>