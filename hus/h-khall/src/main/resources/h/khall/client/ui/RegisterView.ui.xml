<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:h="urn:import:h.style.g.client.ui">
	<ui:with field="msg" type="h.khall.client.resource.Messages" />
	<ui:with field="res" type="h.khall.client.resource.Resource" />
	<ui:style>
	
	</ui:style>
	<b.gwt:HTMLPanel addStyleNames="middle-box text-center loginscreen   animated fadeInDown">
		<b.gwt:HTMLPanel>
			<b.gwt:HTMLPanel>
				<b.gwt:HTMLPanel>
					<b:Anchor HTML="{msg.monogram}" addStyleNames="logo-name" href="{msg.domain}" />
				</b.gwt:HTMLPanel>
				<h3>
					Register to use
					<sup><g:InlineHTML HTML="{msg.monogram}" /></sup>
					Kingdom Hall
				</h3>
				<b:Form addStyleNames="m-t">
					<b:FormGroup>
						<b:Input ui:field="mCongNme" type="TEXT" placeholder="Congregation name" />
					</b:FormGroup>
					<b:FormGroup>
						<b:Input ui:field="mCongNum" type="NUMBER" placeholder="Congregation number" />
					</b:FormGroup>
					<b:FormGroup>
						<b:Input ui:field="mFirst" type="TEXT" placeholder="First name" />
					</b:FormGroup>
					<b:FormGroup>
						<b:Input ui:field="mLast" type="TEXT" placeholder="First name" />
					</b:FormGroup>
					<b:FormGroup>
						<b:Input ui:field="mEmail" type="EMAIL" placeholder="User name" />
					</b:FormGroup>
					<b:FormGroup>
						<b.gwt:HTMLPanel addStyleNames="checkbox i-checks">
							<b:CheckBox ui:field="mAgree" text="&nbsp;Agree the terms and policy" />
						</b.gwt:HTMLPanel>
					</b:FormGroup>

					<b:Button ui:field="mRegister" type="PRIMARY" block="true" addStyleNames="full-width m-b" text="Register" />

					<b.html:Paragraph addStyleNames="text-muted text-center">
						<small>Already have an account?</small>
					</b.html:Paragraph>
					<b:Anchor ui:field="mLogin" addStyleNames="btn btn-sm btn-white btn-block">
						<small>Login</small>
					</b:Anchor>
				</b:Form>
			</b.gwt:HTMLPanel>
		</b.gwt:HTMLPanel>
	</b.gwt:HTMLPanel>
</ui:UiBinder>